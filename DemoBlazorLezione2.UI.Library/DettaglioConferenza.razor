
<h3>Dettaglio Conferenza</h3>

<EditForm Model="Conferenza" OnValidSubmit="@(() => OnSalva.InvokeAsync(Conferenza))">

    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="nome">Nome</label>
        <InputText id="nome" @bind-Value="Conferenza.Nome" class="form-control" placeholder="Inserisci Nome" />
        <ValidationMessage For="@( () => Conferenza.Nome)" />
    </div>

    <div class="form-group">
        <label for="luogo">Località</label>
        <InputText id="luogo" @bind-Value="Conferenza.Luogo" class="form-control" placeholder="Inserisci Località" />
        <ValidationMessage For="@( () => Conferenza.Luogo)" />
    </div>

    <div class="form-group">
        <label for="datainizio">Data Inizio</label>
        <InputDate id="datainizio" @bind-Value="Conferenza.DataInizio" class="form-control" placeholder="Inserisci Data" />
    </div>

    <div style="margin-top:10px">

        <button type="submit" class="btn btn-primary">Salva</button>
        <button type="button" class="btn btn-warning" @onclick="() => OnAnnulla.InvokeAsync()">Annulla</button>

    </div>

</EditForm>


@code {
    [Parameter] public Conferenza Conferenza { get; set; } = new();
    [Parameter] public EventCallback<Conferenza> OnSalva { get; set; }
    [Parameter] public EventCallback OnAnnulla { get; set; }
}
